
<!DOCTYPE html>
<html lang="fa" class="light-style layout-navbar-fixed layout-menu-fixed" dir="rtl" data-theme="theme-default" data-assets-path="../../assets/" data-template="vertical-menu-template-no-customizer">
  <head>
    <partial name="/Areas/Admin/Pages/Shared/Partial/_Head.cshtml" />
    @await RenderSectionAsync("Style", false)
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
            <partial name="/Areas/Admin/Pages/Shared/Partial/_Menu.cshtml" />
       <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              @RenderBody()
            </div>
            <!-- / Content -->

            <!-- Footer -->
                    <partial name="/Areas/Admin/Pages/Shared/Partial/_Footer.cshtml" />
            <!-- / Footer -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>

      <!-- Drag Target Area To SlideIn Menu On Small Screens -->
      <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->

    <!-- Core JS -->
    <!-- build:js assets/vendor/js/core.js -->
    <partial name="/Areas/Admin/Pages/Shared/Partial/_Script.cshtml" />
    @await RenderSectionAsync("Script",false)
  </body>
</html>